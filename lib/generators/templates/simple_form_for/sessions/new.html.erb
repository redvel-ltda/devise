<h2><%= t 'devise.views.sessions.new.title' %></h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="inputs">
    <%= f.input :email, :label => t('devise.attributes.email'), :required => false, :autofocus => true %>
    <%= f.input :password, :label => t('devise.attributes.password'), :required => false %>
    <%= f.input :remember_me, :label => t('devise.attributes.remember_me'), :as => :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="actions">
    <%= f.button :submit, t('devise.views.sessions.new.submit') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>