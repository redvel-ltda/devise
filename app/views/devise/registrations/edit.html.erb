<h2><%= t 'devise.views.registrations.edit.title' %> <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

  <p><%= f.label :email, t('devise.attributes.email') %><br />
  <%= f.email_field :email %></p>

  <p><%= f.label :password, t('devise.attributes.password') %> <i>(<%= t 'devise.views.registrations.edit.leave_blank' %>)</i><br />
  <%= f.password_field :password %></p>

  <p><%= f.label :password_confirmation, t('devise.attributes.password_confirmation') %><br />
  <%= f.password_field :password_confirmation %></p>

  <p><%= f.label :current_password, t('devise.attributes.current_password') %> <i>(<%= t 'devise.views.registrations.edit.current_password_confirm' %>)</i><br />
  <%= f.password_field :current_password %></p>

  <p><%= f.submit t('devise.views.registrations.edit.submit') %></p>
<% end %>

<h3><%= t 'devise.views.registrations.edit.cancel_account' %></h3>

<p><%= t 'devise.views.registrations.edit.unhappy' %> <%= link_to t('devise.views.registrations.edit.cancel_account'), registration_path(resource_name), :confirm => t('devise.main.confirm'), :method => :delete %>.</p>

<%= link_to t('devise.main.back'), :back %>
